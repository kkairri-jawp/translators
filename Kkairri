function detectWeb(doc, url) {
  return "newspaperArticle";
}

function doWeb(doc, url) {
  scrape(doc, url);
}

function scrape(doc, url) {
  var item = new Zotero.Item('newspaperArticle');
  item.rights = 'Copyright THE MAINICHI NEWSPAPERS. All rights reserved.';
  item.title = doc.querySelector('meta[name="title"]').getAttribute('content');
  item.date = doc.querySelector('meta[name="lastupdate"]').getAttribute('content');
  item.publicationTitle = '毎日新聞';
  item.language = 'ja';
  item.url = url;
  item.complete();
}
