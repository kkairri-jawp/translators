function detectWeb(doc, url) {
  return "newspaperArticle";
}

function doWeb(doc, url) {
  scrape(doc, url);
}

function scrape(doc, url) {
  var item = new Zotero.Item('newspaperArticle');
  if(doc.querySelector('script[type="application/ld+json"]') != null){
	  var strjson = doc.querySelector('script[type="application/ld+json"]').innerHTML;
	  var json = JSON.parse(strjson);
	  var obj = [ json ];
	  if(obj[0].creator != undefined) item.author = obj[0].creator.toString();
  }
  item.rights = 'Copyright © The Asahi Shimbun Company. All rights reserved.';
  item.title = doc.querySelector('meta[name="TITLE"]').getAttribute('content');
  item.shortTitle = doc.querySelector('meta[name="SHORTTITLE"]').getAttribute('content');
  item.date = doc.querySelector('meta[name="pubdate"]').getAttribute('content');
  item.publicationTitle = '朝日新聞デジタル';
  item.language = 'ja';
  item.url = url;
  item.complete();
}
